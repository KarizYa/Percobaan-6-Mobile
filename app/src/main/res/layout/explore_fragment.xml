<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Riwayat Pendidikan"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="50px"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SD (2010 - 2016)"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:text="Saya bersekolah diSDN Inpres 1 Tanamodindi"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMP (2016 - 2018)"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:text="Saya bersekolah di SMPN 4 Palu"
        android:layout_marginBottom="50px"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMA (2019 - 2022)"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:text="Saya bersekolah di SMA Model Terpadu Madani"
        android:textAlignment="center"
        android:layout_marginBottom="50px"/>
</LinearLayout>